{
  "name": "Gmail Sentiments Extension",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "This extension shows Sentiments, Sentiments scores and actions.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en", 
  "content_security_policy_extension": {
    "script-src": ["'self'", "https://jsonplaceholder.typicode.com/todos"],
    "object-src": ["'self'"]
  },
  "permissions": ["activeTab", "scripting", "management", "https://jsonplaceholder.typicode.com/*"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "css":["styles/main.css"],
      "js": ["scripts/fontawesome.js","scripts/jquery.js","scripts/gmail.js", "scripts/content.js"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}

